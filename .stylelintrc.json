{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": ["mixin", "define-mixin", "each", "if", "else", "for", "include", "apply"]
    }],
    "font-family-no-missing-generic-family-keyword": [true, {
      "ignoreFontFamilies": ["/.*/"]
    }],
    "max-line-length": [150, {
      "ignorePattern": ["/^@apply\\s+/"]
    }]
  }
}